{
  "name": "donation-encourager",
  "version": "1.0.26",
  "description": "Remind your readers with a smile about donating",
  "main": "dist/index.esm.js",
  "unpkg": "dist/donation-encourager.js",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "start": "webpack serve --progress --hot --inline --mode development",
    "format": "prettier --write \"src/**/*.js\"",
    "transpile": "babel src -d dist --copy-files",
    "babel-watch": "babel src --watch -d dist --copy-files --verbose",
    "prepare": "npm run build && npm run transpile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dekoder-org/donation-encourager.git"
  },
  "keywords": [
    "donation",
    "funding"
  ],
  "author": "Daniel Marcus <daniel.marcus@dekoder.org> (https://www.dekoder.org/)",
  "contributors": [
    "Kim Meyer <kim.meyer@palasthotel.de> (https://palasthotel.de/)"
  ],
  "homepage": "https://github.com/dekoder-org/donation-encourager",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dekoder-org/donation-encourager/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/plugin-transform-react-jsx": "^7.12.16",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.16",
    "@babel/register": "^7.12.13",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.2",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^5.0.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.7",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.21.2",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "cross-storage": "^1.0.0",
    "mobile-drag-drop": "^2.3.0-rc.2",
    "preact": "^10.5.12",
    "react-intersection-observer": "^8.31.0",
    "react-odometerjs": "^2.1.1",
    "react-portal": "^4.2.1"
  },
  "peerDependencies": {
    "react": ">=16.8.1",
    "react-dom": ">=16.8.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx"
      ]
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1% in DE",
    "ie 11",
    "not dead"
  ],
  "prettier": {
    "semi": false
  }
}
