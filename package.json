{
  "name": "donation-encourager",
  "version": "1.2.0",
  "description": "Remind your readers with a smile about donating",
  "main": "dist/index.esm.js",
  "unpkg": "dist/donation-encourager.js",
  "scripts": {
    "dev": "npm run get-dev-page && npm run start",
    "build": "webpack --mode production",
    "start": "NODE_ENV=development webpack serve --progress --hot --mode development",
    "format": "prettier --write \"src/**/*.js\"",
    "transpile": "babel src -d dist --copy-files",
    "babel-watch": "babel src --watch -d dist --copy-files --verbose",
    "prepare": "npm run build && npm run transpile",
    "get-dev-page": "mkdir -p dev-page && curl https://www.dekoder.org/de/article/journalisten-auslaendische-agenten-medien > ./dev-page/index.html && sed -i '' -e 's|/sites/all/themes/dekoder/js/donation-encourager.js|./donation-encourager.js|' ./dev-page/index.html",
    "analyze": "NODE_ENV=analyze webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dekoder-org/donation-encourager.git"
  },
  "keywords": [
    "donation",
    "funding"
  ],
  "author": "Daniel Marcus <daniel.marcus@dekoder.org> (https://www.dekoder.org/)",
  "contributors": [
    "Kim Meyer <kim.meyer@palasthotel.de> (https://palasthotel.de/)"
  ],
  "homepage": "https://github.com/dekoder-org/donation-encourager",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dekoder-org/donation-encourager/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.23.2",
    "@babel/register": "^7.15.3",
    "ajv": "^7.2.4",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^5.4.0",
    "prettier": "^3.0.3",
    "sass": "^1.43.2",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "cross-storage": "^1.0.0",
    "mobile-drag-drop": "^2.3.0-rc.2",
    "preact": "^10.5.15",
    "react-intersection-observer": "^9.3.5",
    "react-odometerjs": "^2.1.2",
    "react-portal": "^4.2.1"
  },
  "peerDependencies": {
    "react": ">=16.8.1",
    "react-dom": ">=16.8.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx"
      ]
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1% in DE",
    "ie 11",
    "not dead"
  ],
  "prettier": {
    "semi": false
  }
}
